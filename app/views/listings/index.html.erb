<div class="jumbotron">
  <%= image_tag("thavorn_beach.png", class:  "hero-image") %>
  <div class="center-block">
    <h1 class="welcome">Welcome Home</h1>
  </div>
</div>

<%= render partial: "listings_page_filter" %>

<div class="row listings-index">
  <div class="col-lg-12">
    <ul class="slides">
      <% @listings.each do |listing| %>
        <li class="listing-slide" id="listing-slide">
          <%= link_to user_listing_path(listing.user.slug, listing) do %>
          <% if listing.listing_images.any? %>
            <%= image_tag listing.listing_images.first.image.url %>
          <% end %>
          <span class="d-hover"><br>
            Property Category: <%= listing.category.name %><br>
            Property Description: <%= listing.description %><br>
            Nightly Rate: <%= number_to_currency(listing.currency) %><br>
            Max Guests: <%= listing.max_guests %><br>
          </span></a></li>
          <% end %>
      <% end %>
    </ul>
  </div>
</div>
