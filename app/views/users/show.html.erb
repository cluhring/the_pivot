<div class="jumbotron masthead user-show-head">
  <div class="row profile-header">
    <div class="col-lg-12">
      <h1><%= @user.first_name %></h1>
    </div>
    <div class="row">
      <div class="col-lg-4">
        <%= image_tag @user.image.url %>
      </div>
      <div class="col-lg-8">
        <p><%= @user.about_me %></p>
      </div>
    </div>
  </div>

  <div class="row listings-index">
    <div class="col-lg-12">
      <ul class="slides">
        <% @listings.each do |listing| %>
          <li class="listing-slide" id="listing-slide">
            <%= link_to user_listing_path(listing.user.slug, listing) do %>
            <% if listing.listing_images.any? %>
              <%= image_tag listing.listing_images.last.image.url %>
            <% end %>
            <span class="d-hover"><br>
              Property Category: <%= listing.category.name %><br>
              Property Description: <%= listing.description %><br>
              Nightly Rate: <%= number_to_currency(listing.currency) %><br>
              Max Guests: <%= listing.max_guests %><br>
            </span></a></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>

